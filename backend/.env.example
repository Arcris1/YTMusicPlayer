# Application
APP_NAME="YouTube Music Player API"
APP_VERSION="1.0.0"
DEBUG=true

# Security
SECRET_KEY=your-super-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/musicplayer

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600

# YouTube
YOUTUBE_AUDIO_FORMAT=bestaudio/best
YOUTUBE_VIDEO_FORMAT=bestvideo+bestaudio/best
